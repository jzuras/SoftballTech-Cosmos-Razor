@page "{organization}/{id}"

@model Sbt.Pages.Admin.Divisions.DeleteModel

@{
    ViewData["Title"] = "Admin - Delete Division";
}

<h1>Delete Division</h1>

<h4>Organization: @Html.Raw(Model.Organization)</h4>
<hr />
<div>
    <h5>Are you sure you want to delete this division?</h5><br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionInfo.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionInfo.League)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.League)
        </dd>
        <dt class="col-sm-2">
            Name or #
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.Div)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionInfo.Locked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.Locked)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionInfo.Updated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.Updated)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="DivisionInfo.Organization" />
        <input type="hidden" asp-for="DivisionInfo.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" @((Model.DisableSubmitButton) ? "disabled" : "") /> |
        <a asp-page="./Index" asp-route-organization="@Model.Organization">Back to List</a>
    </form>
</div>
