        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.Div)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionInfo.Locked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.Locked)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DivisionInfo.Updated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DivisionInfo.Updated)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DivisionInfo?.ID" asp-route-organization="@Model.Organization">Edit</a> |
